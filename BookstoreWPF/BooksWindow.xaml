<Window x:Class="BookstoreWPF.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Книги" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="BooksDataGrid" AutoGenerateColumns="True" Margin="10" SelectionChanged="BooksDataGrid_SelectionChanged"/>
        <Button Content="Добавить в корзину" Click="AddToCart_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>
</Window>